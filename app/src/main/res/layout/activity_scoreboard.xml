<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lassesjoblom.thirty.ScoreboardActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/totalScoreLabel"/>
<ScrollView
    android:id="@+id/scrollvy"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/r1ScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/scoreBoardFontSize"
                android:text="@string/scoreRoundOne"/>
        </LinearLayout>
        <TextView
            android:id="@+id/r2ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r1ScoreLabel"
            android:text="@string/scoreRoundTwo"/>
        <TextView
            android:id="@+id/r3ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r2ScoreLabel"
            android:text="@string/scoreRoundThree"/>
        <TextView
            android:id="@+id/r4ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r3ScoreLabel"
            android:text="@string/scoreRoundFour"/>
        <TextView
            android:id="@+id/r5ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r4ScoreLabel"
            android:text="@string/scoreRoundFive"/>
        <TextView
            android:id="@+id/r6ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r5ScoreLabel"
            android:text="@string/scoreRoundSix"/>
        <TextView
            android:id="@+id/r7ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r6ScoreLabel"
            android:text="@string/scoreRoundSeven"/>
        <TextView
            android:id="@+id/r8ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r7ScoreLabel"
            android:text="@string/scoreRoundEight"/>
        <TextView
            android:id="@+id/r9ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r8ScoreLabel"
            android:text="@string/scoreRoundNine"/>
        <TextView
            android:id="@+id/r10ScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreBoardFontSize"
            android:layout_below="@id/r9ScoreLabel"
            android:text="@string/scoreRoundTen"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
